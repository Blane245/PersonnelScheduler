extends ../../views/layout

block content
    h1= title
    - var addurl = '/roles/' +organization.id+ '/create/'
    button(type='button' class='btn btn-large btn-primary') 
        a(href=addurl style="color:white") Add Role
    if role_list.length != 0
        table(class='table' id='role-table')
            thread 
                tr 
                th(class='text-center' scope='col') Name 
                th(class='text-center' scope='col') Description 
                th(class='text-center' scope='col') Modify
                th(class='text-center' scope='col') Delete
            tbody 

                each role in role_list
                    tr 
                        td(class='text-left') #{role.name}
                        td(class='text-left') #{role.description}
                        td(class='text-center')
                            //- button(type='button' class='btn btn-small btn-primary') 
                            a(href='/roles/role/'+role.id+'/modify' style="color:blue") M
                        td(class='text-center')
                            //- button(type='button' class='btn btn-small btn-danger') 
                            a(href='/roles/role/'+role.id+'/delete' style="color:red") D
    else
        li There are no roles for organization #{organization.name}
