extends ../../views/layout

block content
  h1= title
  h2= 'Description: ' + training.description

  p Do you really want to delete this training?

  form(method='POST' action='')
    div.form-group
      input#trainingid.form-control(type='hidden',name='trainingid', required='true', value=training._id )

    button.btn.btn-primary(type='submit') Delete
    a(href='/trainings/'+org)
      button.btn.btn-primary(type='button') Cancel
