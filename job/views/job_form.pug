extends ../../views/layout

block content
    h1= title
    form(method='POST' action='' novalidate)
        div.form-group 
            label(for='name') Name: 
            input#name.form-control(
                name='name'
                type='text' 
                placeholder='Name of Job'
                required='true' 
                value=(undefined==job ? '' : job.name))        
        div.form-group 
            label(for='description') Name: 
            input#name.form-control(
                name='description'
                type='textarea' 
                placeholder='Description of Job'
                required='false' value=(undefined==job ? '' : job.description))
        button.btn.btn-primary(type='submit') Submit
        p
        a(href='/jobs/'+org)
            button.btn.btn-danger(type='button') Cancel
    if errors 
        ul  
            for error in errors 
                li!= error.msg