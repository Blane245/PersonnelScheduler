extends ../../views/layout

block content
  h1= title
  h2= 'Email: ' + person.email

  p Do you really want to delete this person?

  form(method='POST' action='')
    div.form-group
      input#personid.form-control(type='hidden',name='personid', required='true', value=person._id )

    button.btn.btn-primary(type='submit') Delete
    p
    a(href='/persons/'+person.organization.id)
      button.btn.btn-danger(type='submit') Cancel
