extends ../../views/layout

block content
  h1= title

  button(type='button' class='btn btn-large btn-primary') 
    a(href='organizations/create' style="color:white") Add Organization 
  if organization_list.count != 0
    table(class='table' id='org-table')
      thread 
        tr 
          th(class='text-center' scope='col') Name 
          th(class='text-center' scope='col') Description 
          th(class='text-center' scope='col') Roles / Jobs / Personnel
          th(class='text-center' scope='col') Modify 
          th(class='text-center' scope='col') Delete 
      tbody 

        each org in organization_list
          tr 
            td(class='text-left') #{org.name}
            td(class='text-left') #{org.description}
            td(class='text-center')
              //- button(type='button' class='btn btn-small btn-dark' href='jobs/'+org.id) J
              a(href='roles/'+org.id style="color:black") R  / 
              a(href='jobs/'+org.id style="color:black") J  /  
              a(href='persons/'+org.id style="color:black") P  
            td(class='text-center')
              //- button(type='button' class='btn btn-small btn-primary') 
              a(href='organizations/organization/'+org.id+'/modify' style="color:blue") M
            td(class='text-center')
              //- button(type='button' class='btn btn-small btn-danger') 
              a(href='organizations/organization/'+org.id+'/delete' style="color:red") D
  else
    li There are no organizations
