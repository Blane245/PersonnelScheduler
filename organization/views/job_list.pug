extends ../../views/layout

block content
    h1= title

    button(type='button' class='btn btn-large btn-primary') 
        a(href='organizations/#{orgId}/jobs/create' style="color:white") Add Job
    if job_list == null
        table(class='table' id='org-table')
        thread 
            tr 
            th(class='text-center' scope='col') Name 
            th(class='text-center' scope='col') Description 
            th(class='text-center' scope='col') ?
            th(class='text-center' scope='col') Modify / Delete 
        tbody 

            each job in job_list
                tr 
                    td(class='text-left') #{job.name}
                    td(class='text-left') #{job.description}
                    td(class='text-center')
                    //-   button(type='button' class='btn btn-small btn-dark')
                    //-     a(href='organizations/organization/'+org.id+'/jobs' style="color:white") J
                    td(class='text-center')
                    button(type='button' class='btn btn-small btn-primary') 
                        a(href='organizations/job/'+job.id+'/modify' style="color:white") M
                    td(class='text-center')
                    button(type='button' class='btn btn-small btn-danger') 
                        a(href='organizations/job/'+job.id+'/delete' style="color:white") D
    else
        li There are no jobs for organization #{organization.name}
