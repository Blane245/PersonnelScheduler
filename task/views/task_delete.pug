extends ../../views/layout

block content
  h1= title
  h2= 'Description: ' + task.description
  h2= 'Start Date: ' + task.startDate_formatted
  h2= 'End Date: ' + task.endDate_formatted

  p Do you really want to delete this task?

  form(method='POST' action='')
    div.form-group
      input#taskid.form-control(type='hidden',name='taskid', required='true', value=task._id )

    button.btn.btn-primary(type='submit') Delete
    p
    a(href='/jobs/job/'+job.id+'/tasks')
      button.btn.btn-danger(type='button') Cancel
